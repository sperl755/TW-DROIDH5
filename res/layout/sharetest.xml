<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/backgroundcolor"
>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

 <FrameLayout android:layout_height="62px" android:id="@+id/frameLayout1" android:layout_width="match_parent">
        <ImageView android:scaleType="centerCrop" android:id="@+id/imageView1" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="top" android:paddingTop="0px" android:background="@drawable/backrepeat"></ImageView>
       <ImageButton android:layout_width="wrap_content" android:background="@drawable/tw_logofix" android:src="@drawable/tw_logofix" android:layout_gravity="center_horizontal|center_vertical" android:layout_marginBottom="1px" android:id="@+id/talentwire" android:adjustViewBounds="true" android:scaleType="fitXY" android:layout_height="18dp"></ImageButton>  
       </FrameLayout>
     <ImageView android:id="@+id/image" android:layout_width="wrap_content"  android:layout_height="290dp" android:layout_margin="10dp" android:layout_gravity="center_horizontal|top"></ImageView>

     <EditText
         android:id="@+id/postbox"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:ems="10"
         android:inputType="textMultiLine"
         android:text="Describe your image.." >

         <requestFocus />
     </EditText>

<FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                >

                <TextView
                    android:id="@+id/charCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:paddingLeft="40dp"
                    android:text="500"
                    android:textColor="#000" />

                <ImageButton
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/photo_button"
                    android:src="@drawable/photo_button" />

                <Spinner
                    android:id="@+id/catselect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:background="@drawable/categoryselector" />

            </FrameLayout>
</LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <FrameLayout
            android:id="@+id/shareFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" >

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/share" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_marginLeft="5dp" >

                <CheckBox
                    android:id="@+id/fbCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share on Facebook"
                    android:textColor="#000"
                    android:textSize="11dp" />

                <CheckBox
                    android:id="@+id/twitCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tweet"
                    android:textColor="#000"
                    android:textSize="11dp" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    
</LinearLayout>