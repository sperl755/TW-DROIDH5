<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/backgroundcolor"
>
    <ScrollView android:layout_width="match_parent" android:id="@+id/scrollView1" android:layout_height="match_parent">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent" android:orientation="vertical" android:layout_height="fill_parent">
            <FrameLayout android:id="@+id/frameLayout1" android:layout_height="62px" android:layout_width="match_parent">
                <ImageView android:id="@+id/imageView1" android:layout_width="fill_parent" android:layout_gravity="top" android:layout_height="wrap_content" android:background="@drawable/backrepeat" android:paddingTop="0px" android:scaleType="centerCrop"></ImageView>
                <ImageButton android:layout_marginBottom="1px" android:layout_width="wrap_content" android:background="@drawable/tw_logofix" android:layout_gravity="center_horizontal|center_vertical" android:layout_height="18dp" android:id="@+id/talentwire" android:src="@drawable/tw_logofix" android:scaleType="fitXY" android:adjustViewBounds="true"></ImageButton>
            </FrameLayout>
            <EditText android:text="Describe your image.." android:layout_height="150dp" android:layout_width="match_parent" android:inputType="textMultiLine" android:id="@+id/postbox" android:layout_margin="10dp">
                <requestFocus></requestFocus>
            </EditText>
            <FrameLayout android:id="@+id/frameLayout2" android:layout_height="match_parent" android:layout_marginBottom="10dp" android:layout_margin="10dp" android:layout_width="match_parent">
                <FrameLayout android:id="@+id/shareFrame" android:layout_width="match_parent" android:layout_gravity="bottom" android:layout_height="wrap_content">
                    <ImageButton android:layout_width="wrap_content" android:background="@drawable/photo_button" android:layout_height="wrap_content" android:id="@+id/camera" android:src="@drawable/photo_button"></ImageButton>
                    <ImageButton android:layout_width="wrap_content" android:background="@drawable/share" android:layout_gravity="right" android:layout_height="wrap_content" android:id="@+id/share"></ImageButton>
                    <ImageButton android:background="@drawable/categoryselector" android:layout_width="wrap_content" android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:id="@+id/catselect"></ImageButton>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>